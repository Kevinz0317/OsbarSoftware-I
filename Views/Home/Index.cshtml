@{
    ViewBag.Title = "Home Page";
}
<main>
    <section class="row" aria-labelledby="aspnetTitle">
        <div style="overflow: hidden;">
            <div style="float: left; width: 50%; margin-top: 200px;">
                <h1 id="title">¿Buscas algún mueble?</h1>
                <p class="lead">Consulta nuestro catálogo de productos</p>
                <p><a href="@Url.Action("Index", "Catalogo")" class="btn btn-danger btn-md">Ver productos &raquo;</a></p>
            </div>
            <div style="float: right; width: 50%;">
                <div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="~/Imagenes/17.jpg" class="d-block w-100">
                        </div>
                        <div class="carousel-item">
                            <img src="~/Imagenes/18.jpg" class="d-block w-100">
                        </div>
                        <div class="carousel-item">
                            <img src="~/Imagenes/19.jpg" class="d-block w-100">
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"><i class="fas fa-chevron-left"></i></span>
                        <span class="visually-hidden">Anterior</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"><i class="fas fa-chevron-right"></i></span>
                        <span class="visually-hidden">Siguiente</span>
                    </button>
                    <script>
                        $(document).ready(function () {
                            $('#carouselCatalogo').carousel({
                                interval: 3000
                            });
                        });
                    </script>
                </div>
            </div>
        </div>
    </section>

    <section class="row" aria-labelledby="RegistroenInicio">
        <div style="overflow: hidden; text-align: center;">
            <div style="width: 50%; margin-top: 160px; margin-bottom: 100px; margin-left: auto; margin-right: auto;">
                <h1 id="title">Regístrate para poder conseguir nuestros productos</h1>
                <p class="lead">Infórmate acerca de novedades, beneficios y más</p>
                <p><a href="@Url.Action("Registro", "Inicio")" class="btn btn-danger btn-md">Registrarme &raquo;</a></p>
            </div>
        </div>
    </section>



    <div class="row">
        <section class="col-md-4" aria-labelledby="fundamentosinicio">
            <h2 id="gettingStartedTitle">Principios y valores</h2>
            <p>
                Conozca las bases que fundamentan la filosofía de negocio de la empresa
            </p>
            <p><a class="btn btn-outline-dark" href="@Url.Action("FundamentosEmpresa", "Home")">Conoce más &raquo;</a></p>
        </section>
        <section class="col-md-4" aria-labelledby="Carritoinicio">
            <h2 id="librariesTitle">Mi carrito</h2>
            <p>Echa un vistazo a los artículos que tienes en tu carrito</p>
            <p><a class="btn btn-outline-dark" href="@Url.Action("Registro", "Inicio")">Learn more &raquo;</a></p>
        </section>
    </div>
</main>
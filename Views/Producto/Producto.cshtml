
@{
    ViewBag.Title = "Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Producto</h2>

<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i> Listado de Productos
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-sm-12">
                <button class="btn btn-success" type="button" onclick="abrirModal(null)">Crear Nuevo</button>
            </div>
        </div>

        <hr />
        <table id="tabla" class="display responsive" style="width:100%">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Descripcion</th>
                    <th>Categoria</th>
                    <th>Precio</th>
                    <th>Impuesto</th>
                    <th>Stock</th>
                    <th></th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="FormModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="exampleModalLabel">Producto</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input id="id_prod" type="hidden" value="0" />
                <form id="formNivel">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="mb-2">
                                <img id="img_producto" height="198" width="200" class="border border-dark" />
                            </div>
                            <div class="mb-2">
                                <input class="form-control" type="file" id="imgproducto" onchange="readURL(this);">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="mb-2">
                                <label for="nombre" class="form-label">Nombre</label>
                                <input type="text" class="form-control required" id="nombre" name="nombre" autocomplete="off">
                            </div>
                            <div class="mb-2">
                                <label for="descripcion" class="form-label">Descripcion</label>
                                <textarea type="text" rows="5" class="form-control required" id="descripcion" name="descripcion" autocomplete="off"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="mb-2">
                                <label for="categoria" class="form-label">Categoria</label>
                                <select id="id_categoria" class="form-select">
                                    <option value="1">Escritorio</option>
                                    <option value="2">Mesa</option>
                                    <option value="3">Silla</option>
                                    <option value="4">Archivador</option>
                                    <option value="5">Estantería</option>
                                    <option value="6">Armario</option>
                                    <option value="7">Cajonera</option>
                                    <option value="8">Mueble Modular</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="mb-2">
                                <label for="precio" class="form-label">Precio</label>
                                <input type="text" class="form-control required" id="precio" name="precio" autocomplete="off">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="mb-2">
                                <label for="impuesto" class="form-label">Impuesto</label>
                                <input type="text" class="form-control required" id="impuesto" name="impuesto" autocomplete="off">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="mb-2">
                                <label for="stock" class="form-label">Stock</label>
                                <input type="text" class="form-control required" id="stock" name="stock" autocomplete="off">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="AgregarProducto()">Guardar</button>
            </div>
        </div>
    </div>
</div>

@section scripts{

    <script>
        var datosTabla;


        function readURL(input) {
    if (input.files && input.files[0]) {
        var reader = new FileReader();

        reader.onload = function (e) {
            $('#img_producto')
                .attr('src', e.target.result)
                .width(200)
                .height(198);
        };

        reader.readAsDataURL(input.files[0]);
    }
        }


$(document).ready(function () {
    datosTabla = $('#tabla').DataTable({
        responsive: true,
        "ajax": {
            "url": '@Url.Action("ListaProducto", "Producto")',
            "type": "GET",
            "datatype": "json"
        },
        "columns": [
            { "data": "nombre" },
            { "data": "descripcion" },
            { "data": "id_categoria" },
            { "data": "precio" },
            { "data": "impuesto" },
            { "data": "stock" },
            {
                "data": "id_prod", "render": function (data, type, row, meta) {

                    return $("<button>").addClass("btn btn-primary btn-editar btn-sm").append(
                        $("<i>").addClass("fas fa-pen")
                    ).attr({ "data-informacion": JSON.stringify(row) })[0].outerHTML
                        +
                        $("<button>").addClass("btn btn-danger btn-eliminar btn-sm ms-2").append(
                            $("<i>").addClass("fas fa-trash")
                        ).attr({ "data-informacion": JSON.stringify(row) })[0].outerHTML;

                },
                "orderable": false,
                "searchable": false,
                "width": "90px"
            }

        ],
    });
});



            $(document).on('click', '.btn-editar', function (event) {
                var json = $(this).data("informacion")

                abrirModal(json)
            });

        function abrirModal(json) {
            $("#id_prod").val(0);
            $("#img_producto").attr({ "src": "" });
            $("#nombre").val("");
            $("#descripcion").val("");
            $("#id_categoria").val(1);
            $("#precio").val("");
            $("#impuesto").val("");
            $("#stock").val("");

            if (json != null) {
                console.log(json)
                $("#id_prod").val(json.id_prod);
                $("#img_producto").attr({ "src": "data:image/" + json.extImg + ";imgBase64," + json.imgBase64 });
                $("#nombre").val(json.nombre);
                $("#descripcion").val(json.descripcion);
                $("#id_categoria").val(json.id_categoria);
                $("#precio").val(json.precio);
                $("#impuesto").val(json.impuesto);
                $("#stock").val(json.stock);
            }
            $('#FormModal').modal('show');
        }


            $(document).on('click', '.btn-eliminar', function (event) {
                var json = $(this).data("informacion")

                     if (confirm('¿Esta seguro de eliminar?')) {
                          jQuery.ajax({
                                 url: '@Url.Action("EliminarProducto", "Producto")',
                                 type: "POST",
                                 data: JSON.stringify({ id: json.id_prod}),
                                 dataType: "json",
                                 contentType: "application/json; charset=utf-8",
                                 success: function (data) {

                                     if (data.resultado) {
                                         datosTabla.ajax.reload();
                                     } else {
                                         alert("No se pudo eliminar")
                                     }
                                 },
                                 error: function (error) {
                                     console.log(error)
                                 },
                                 beforeSend: function () {

                                 },
                             });
                     } else {

                     }

                 });

                 function AgregarProducto() {

            var ImagenSeleccionada = ($("#imgproducto"))[0].files[0];

            var producto = {
                id_prod: $("#id_prod").val(),
                nombre: $("#nombre").val(),
                descripcion: $("#descripcion").val(),
                id_categoria: $("#id_categoria").val(),
                precio: $("#precio").val(),
                impuesto: $("#impuesto").val(),
                stock: $("#stock").val(),
                imagen : "",
            }

            var request = new FormData();
            request.append("archivoImagen", ImagenSeleccionada);
            request.append("producto", JSON.stringify(producto));

            jQuery.ajax({
                url: '@Url.Action("AgregarProducto", "Producto")',
                type: "POST",
                data: request,
                processData: false,
                contentType : false,
                success: function (data) {
                    if (data.resultado) {
                        datosTabla.ajax.reload();
                        $('#FormModal').modal('hide');
                    } else {
                        alert("No se pudo guardar los cambios")
                    }
                },
                error: function (error) {
                    console.log(error)
                },
                beforeSend: function () {

                },
            });
        };

        $.fn.inputFilter = function (inputFilter) {
            return this.on("input keydown keyup mousedown mouseup select contextmenu drop", function () {
                if (inputFilter(this.value)) {
                    this.oldValue = this.value;
                    this.oldSelectionStart = this.selectionStart;
                    this.oldSelectionEnd = this.selectionEnd;
                } else if (this.hasOwnProperty("oldValue")) {
                    this.value = this.oldValue;
                    this.setSelectionRange(this.oldSelectionStart, this.oldSelectionEnd);
                } else {
                    this.value = "";
                }
            });
        };


        $("#precio").inputFilter(function (value) {
            return /^-?\d*[.]?\d{0,2}$/.test(value);
        });

        $("#impuesto").inputFilter(function (value) {
            return /^-?\d*[.]?\d{0,2}$/.test(value);
        });

        $("#stock").inputFilter(function (value) {
            return /^-?\d*$/.test(value);
        });






    </script>
}

